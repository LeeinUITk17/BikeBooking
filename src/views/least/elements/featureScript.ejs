<script>
    var radios5 = document.querySelectorAll('input[type="radio"][name="loaixe"]');

    radios5.forEach(function(radio) {
        radio.addEventListener('change', function() {
            document.querySelectorAll('.selected').forEach(function(span) {
                span.classList.remove('selected');
            });

            this.nextElementSibling.querySelector('span').classList.add('selected');
        });
    });

    var loai = document.getElementsByName('pay-method');

    for (var i = 0; i < loai.length; i++) {
        loai[i].addEventListener('change', function (e) {
            document.getElementById('Loai_Sum').innerText = e.target.nextElementSibling.innerText.trim();
        });
    }

    var tinh = document.getElementsByName('address');

    for (var i = 0; i < tinh.length; i++) {
        tinh[i].addEventListener('change', function (e) {
            var percentage = e.target.nextElementSibling.querySelector('strong').innerText.trim();
            document.getElementById('TinhTrang_Sum').innerText = percentage;
        });
    }

    function formatCurrency(amount) {
        return amount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
    }

    var slider = document.getElementById('price'); 
    var output2 = document.getElementById('sliderValue');

    slider.oninput = function () {
        this.value = Math.floor(this.value / 10000) * 10000;
        output2.innerText = formatCurrency(Math.floor(this.value / 10000) * 10000) + ' / ngày';
    }
    
    var radios = document.querySelectorAll('input[type="radio"][name="loaixe"]');
    
    radios.forEach(function(radio) {
        radio.addEventListener('change', function() {
            var typeName = this.nextElementSibling.querySelector('span').innerText.trim();
            document.getElementById('category').value = typeName;
        });
    });
    
    var trangthai = document.querySelectorAll('input[type="radio"][name="state"]');
    trangthai.forEach(function(radio) {
        radio.addEventListener('change', function() {
            var percentage = this.nextElementSibling.querySelector('#state').innerText.trim();
            document.getElementById('productinformation[state]').value = percentage;
        });
    });
    
    var select = document.getElementById('Hang');
    select.addEventListener('change', function() {
        document.getElementById('productinformation[brand]').value = this.value;
    }); 

    // Map
    var cityInput = document.getElementById('address[city]');
    var districtInput = document.getElementById('address[district]');
    var wardInput = document.getElementById('address[ward]');
    var streetInput = document.getElementById('address[street]');

    var currentMarker = null;
    var currentCircle = null;
    var updateTimeout = null;
    var stopTimeout = null;

    function updateMap() {
        var address = `${streetInput.value}, ${wardInput.value}, ${districtInput.value}, ${cityInput.value}, Việt Nam`;

        fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${address}`)
            .then(response => response.json())
            .then(data => {
                if (data.length > 0) {
                    var lat = data[0].lat;
                    var lon = data[0].lon;

                    if (currentMarker) {
                        map.removeLayer(currentMarker);
                    }
                    if (currentCircle) {
                        map.removeLayer(currentCircle);
                    }

                    map.setView([lat, lon], 13);
                    currentMarker = L.marker([lat, lon]).addTo(map);
                    currentCircle = L.circle([lat, lon], {
                        color: 'red',
                        fillColor: '#f03',
                        fillOpacity: 0.5,
                        radius: 500
                    }).addTo(map);
                }
            });
    }

    function handleInput() {
        if (updateTimeout) {
            clearTimeout(updateTimeout);
        }

        updateTimeout = setTimeout(updateMap, 2000);

        if (stopTimeout) {
            clearTimeout(stopTimeout);
        }

        stopTimeout = setTimeout(function() {
            if (updateTimeout) {
                clearTimeout(updateTimeout);
            }
        }, 3000);
    }

    streetInput.addEventListener('input', handleInput);

    //map
    var map = L.map('map').setView([0, 0], 1);
    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
        attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);
</script>

