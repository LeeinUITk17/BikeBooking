<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Lịch sử hợp đồng<span clsas="d-block"></span></h1>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="/product/images/motorlogo.png" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<div class="untree_co-section before-footer-section">
    <div class="container">
      <div class="row mb-5">
        <form class="col-md-12" method="post">
          <div class="site-blocks-table">
            <table class="table">
              <thead>
                <tr>
                  <th class="product-thumbnail">Mã</th>
                  <th class="product-name">Loại</th>
                  <th class="product-price">Tên</th>
                  <th class="product-quantity">Hình</th>
                  <th class="product-total">Từ</th>
                  <th class="product-total">Đến</th>
                  <th class="product-remove">Tổng</th>
                  <th class="product-total">Trạng thái</th>
                </tr>
              </thead>

              <tbody>
                <% if (data && Array.isArray(data)) { %>
                <% data.forEach((item) => { %>
                <tr>
                    <td><a href="contractdetail.html" style="text-decoration: none; color: blue;"><%= item._id%></a></td>
                    <td><%= item.product.productinformation[0].brand%></td>
                    <td class="product-name">
                        <h2 class="h5 text-black"><%= item.product.name%></h2>
                      </td>
                  <td class="product-thumbnail">
                    <img src="<%= item.product.image%>" alt="Image" class="img-fluid">
                  </td>
                  <td><%= item.createdAt.toISOString().split('T')[0]%></td>
                  <td><%= item.expiresAt.toISOString().split('T')[0]%></td>
                  <td><%= item.charging%></td>
                  <td style="color: <%= (item.status) === 'inactive' ? 'Orange' : 'Blue' %>">
                    <strong><%= (item.status) === 'inactive' ? 'Đã hoàn thành hợp đồng' : 'Đang trong thời gian thuê' %></strong>
                  </td>
                  <td><a href="/contract/detail/<%= item._id%>"><button class="btn btn-secondary me-2">Details</button></a></td>
                </tr>
                <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="6">No data available</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </form>
      </div>
     </div>
</div>