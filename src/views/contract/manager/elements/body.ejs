<div  style="padding-top: 5em;" class="row">
  <div class="col-12">
      <div class="title-all text-center">
          <h1>Hợp đồng cho thuê xe</h1>
      </div>
  </div>
</div>
<div class="untree_co-section before-footer-section">
    <div class="container">
      <div class="row mb-5">
        <form class="col-md-12" >
          <div class="site-blocks-table">
            <table class="table">
              <thead>
                <tr>
                  <th class="product-thumbnail">Mã</th>
                  <th class="product-name">Loại</th>
                  <th class="product-price">Tên</th>
                  <th class="product-quantity">Hình</th>
                  <th class="product-total">Từ</th>
                  <th class="product-total">Đến</th>
                  <th class="product-remove">Tổng</th>
                  <th class="product-total">Trạng thái</th>
                </tr>
              </thead>

              <tbody>
                <% if (data && Array.isArray(data) && data.length > 0) { %>
                  <% data.forEach((item) => { %>
                    <tr>
                      <td><a href="/contract/<%= item._id%>" style="text-decoration: none; color: blue;" target="_blank"><%= item._id%></a></td>
                        <td><%= item.product.productinformation[0].brand%></td>
                        <td class="product-name">
                            <h2 class="h5 text-black"><%= item.product.name%></h2>
                          </td>
                      <td class="product-thumbnail">
                        <img src="<%= item.product.image%>" alt="Image" class="img-fluid">
                      </td>
                      <td><%= item.createdAt.toISOString().split('T')[0]%></td>
                      <td><%= item.expiresAt.toISOString().split('T')[0]%></td>
                      <td><%= item.charging%></td>
                      <td >
                        <strong><%= (item.status) === 'inactive' ? 'Đã hoàn thành hợp đồng' : 'Đang trong thời gian thuê' %></strong>
                      </td>
                    </tr>
                  <% }); %>
              <% } else { %>
                  <tr>
                      <td colspan="6">Hiện tại bạn chưa có dữ liệu về hợp đồng cho thuê xe nào  (⁠ノ⁠ಠ⁠益⁠ಠ⁠)⁠ノ !</td>
                  </tr>
              <% } %>
              </tbody>
            </table>
          </div>
        </form>
      </div>
     </div>
</div>
